
.app-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 2rem;
  .app-logo {
    height: 60px;
  }
  .nav-bar {
    display: flex;
    height: 60px;
    justify-content: center;
    align-items: center;
    .nav-item{
      color: #212121;
      display: inline-block;
      text-decoration: none;
      padding: 1rem;
    }
    .nav-item:hover{
      background-color: rgba(67, 152, 234, 0.3);
      -webkit-animation: fadein 0.5s ease-in-out; /* Safari, Chrome and Opera > 12.1 */
      -moz-animation: fadein 0.5s ease-in-out; /* Firefox < 16 */
      -ms-animation: fadein 0.5s ease-in-out; /* Internet Explorer */
      -o-animation: fadein 0.5s ease-in-out; /* Opera < 12.1 */
      animation: fadein 0.5s ease-in-out;
    }
  }
}

.app-module {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 80vh;
  padding: 2rem 0;
}

.app-footer {
  background-color: $primary-color;
  color: #fefefe;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rem 0;
  min-height: 5vh;
  width: 100%;
  bottom: 0;
  .footer-info {
    padding: 0 0 0 1rem;
  }
}

@keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

/* Firefox < 16 */
@-moz-keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

/* Safari, Chrome and Opera > 12.1 */
@-webkit-keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

/* Internet Explorer */
@-ms-keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}

/* Opera < 12.1 */
@-o-keyframes fadein {
    from { opacity: 0; }
    to   { opacity: 1; }
}



@media (max-width: 900px){
  .app-header {
    flex-direction: column;
    .app-logo{
      padding-bottom: 1rem;
    }
    .nav-bar {
      background-color: #234;
      width: 100vw;
      .nav-item{
        color: #fefefe;
      }
    }
  }
  .app-footer {
    flex-direction: column;
    align-items: flex-start;
    .footer-info{
      padding-bottom: 1rem;
    }
  }
}
@media (max-width: 470px){
  .nav-item{
    font-size: 0.75rem;
  }
}
