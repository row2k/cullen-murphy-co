.home-section {
  min-height: 40vh;
  width:100%;
}
.home-description-alt {
  background-color: #FCFCFC
}
.home-section-double {
  max-height: 350px;
  max-width: 350px;
  /*padding: 2rem;*/
}
.home-hero {
  height: 80vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #DDDDDD url("assets/boston-light.png") no-repeat center center fixed;
  background-size: cover;
  z-index: -1;
}
.home-hero-text {
  color: #FFF;
  font-size: 3rem;
  font-weight: bold;
  text-align: center;
  text-shadow: 0 0 0.5rem #000;
  font-family: "Balthazar", serif;
  z-index: 1;
}
.home-description {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 40vh;
  max-width: 100%;
}
.home-description-img {
  img {
    max-height: 350px;
    max-width: 350px;
  }
}
.home-description-text {
  font-size: 1.5rem;
  font-family: "Balthazar", sans-serif;
  line-height: 1.75rem;
}

@media (max-width: 900px){
  .home > .home-description ~ .home-description {
    border-top: 1px solid #FaFaFa;
  }
  .home-description {
    flex-direction: column;
  }
}

@media (max-width: 415px) {
  .home-hero-text {
    font-size: 2rem;
  }
  .home-description {
    width: 100%;
  }
}

.hero { width: 100%; }
